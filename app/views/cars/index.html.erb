<h1>Davinci Motors</h1>

<table>
  <thead>
  <tr>
    <th>Make</th>
    <th>Model</th>
    <th>Year</th>
    <th>Price</th>
    <th colspan='3'></th>
  </tr>
  </thead>

  <tbody>
  <% @car.each do |car| %>
    <tr>
      <td><%= car.make %></td>
      <td><%= car.model %></td>
      <td><%= car.year %></td>
      <td><%= number_to_currency(car.price) %></td>
      <td><%= link_to 'Show', car %></td>
      <td><%= link_to 'Edit', edit_car_path(car) %></td>
      <td><%= link_to 'Destroy', car,
          method: :delete,
          id: dom_id(car, 'Destroy'),
          data: {confirm: 'Are you sure?'}
      %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Car', new_car_path %>

